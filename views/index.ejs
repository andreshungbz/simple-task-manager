<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/common-meta') %>
    <link href="/styles/form.css" rel="stylesheet" />
    <link href="/styles/task.css" rel="stylesheet" />
    <link href="/styles/pagination.css" rel="stylesheet" />
    <link href="/styles/filter-form.css" rel="stylesheet" />
    <title>Simple Task Manager</title>
  </head>
  <body>
    <div class="app">
      <%- include('partials/header') %>
      <main>
        <h2>Filters</h2>
        <%- include ('partials/filter-form') %>
        <h2>Add Task</h2>
        <%- include('partials/add-task-form') %> <% if (error) { %>
        <div class="error-alert">
          <p><strong>Message</strong>: <%= error.message %></p>
          <p><strong>Error Code</strong>: <%= error.appErrorCode %></p>
        </div>
        <% } %>
        <h2>Tasks List</h2>
        <%- include('partials/tasks-list') %>
      </main>
      <%- include('partials/footer') %>
    </div>
  </body>
</html>
