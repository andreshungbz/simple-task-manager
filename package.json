{
  "name": "cmps2212-task-mgmt-app",
  "version": "1.0.0",
  "description": "Simple Task Manager Web Application",
  "homepage": "https://github.com/andreshungbz/cmps2212-task-mgmt-app#readme",
  "bugs": {
    "url": "https://github.com/andreshungbz/cmps2212-task-mgmt-app/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andreshungbz/cmps2212-task-mgmt-app.git"
  },
  "license": "ISC",
  "author": "Andres Hung",
  "type": "module",
  "main": "app.js",
  "scripts": {
    "clean": "rm -rf build",
    "build": "npm run clean && tsc",
    "start": "npm run build && node build/app.js",
    "dev": "tsc && concurrently -k -n \"TS,SERVER\" -c \"cyan,green\" \"tsc --watch\" \"wait-on build/app.js && node --watch build/app.js\"",
    "dbsetup": "psql -U postgres -f script/setup.sql"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "pg": "^8.14.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/node": "^22.13.11",
    "@types/pg": "^8.11.11",
    "concurrently": "^9.1.2",
    "typescript": "^5.8.2",
    "wait-on": "^8.0.3"
  }
}
