{
  "name": "simple-task-manager",
  "version": "2.0.0",
  "description": "Simple Task Manager Web Application",
  "homepage": "https://github.com/andreshungbz/simple-task-manager#readme",
  "bugs": {
    "url": "https://github.com/andreshungbz/simple-task-manager/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andreshungbz/simple-task-manager.git"
  },
  "license": "ISC",
  "author": "Andres Hung",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "clean": "rm -rf build",
    "build": "npm run clean && tsc",
    "test": "vitest --run",
    "start": "npm run build && node build/server.js",
    "dev": "tsc && concurrently -k -n \"TS,NODE\" -c \"cyan,green\" \"tsc --watch\" \"wait-on build/server.js && node --watch build/server.js\"",
    "dbsetup": "psql --username=postgres --file=scripts/setup.sql",
    "dbtables": "psql --username=stm_user --dbname=cmps2212_stm --file=scripts/tables.sql",
    "dbdata": "psql --username=stm_user --dbname=cmps2212_stm --file=scripts/data.sql",
    "initiatedb": "npm run dbsetup && npm run dbtables && npm run dbdata"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "method-override": "^3.0.0",
    "pg": "^8.14.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/method-override": "^3.0.0",
    "@types/node": "^22.13.11",
    "@types/pg": "^8.11.11",
    "concurrently": "^9.1.2",
    "typescript": "^5.8.2",
    "vitest": "^3.0.9",
    "wait-on": "^8.0.3"
  }
}
